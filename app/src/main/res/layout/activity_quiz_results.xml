<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img14"
    tools:context=".QuizResults">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#009432">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="-0dp"
            android:layout_marginEnd="80dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img16" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/img15"/>


    </RelativeLayout>


    <ImageView
        android:id="@+id/congrats"
        android:layout_width="980dp"
        android:layout_height="700dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="190dp"
        android:adjustViewBounds="true"
        android:src="@drawable/img41" />

    <TextView
        android:id="@+id/successTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/congrats"
        android:layout_marginTop="-600dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="You've Successfully Completed a quiz"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/correctAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginTop="380dp"
        android:gravity="center"
        android:rotation="0"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="55dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="350dp"
        android:gravity="center"
        android:rotation="0"
        android:text="Correct Answers"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/incorrectAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="550dp"
        android:gravity="center"
        android:rotation="0"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="550dp"
        android:gravity="center"
        android:rotation="0"
        android:text="Wrong Answers : "
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startNewQuizBtn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Start New Quiz"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_bgreen"
        android:layout_marginTop="600dp" />

</RelativeLayout>