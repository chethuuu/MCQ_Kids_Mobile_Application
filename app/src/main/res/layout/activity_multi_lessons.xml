<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img14"
    tools:context=".Lvl01Lesson">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#009432">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="-0dp"
            android:layout_marginEnd="80dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img16" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/img15"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="550dp"
        android:layout_height="900dp"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/lb" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:layout_marginStart="-15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:src="@drawable/monkey" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/less1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/invisible_btn"
        android:text="Lesson 01"
        android:textColor="@color/black"
        android:textSize="35dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/less2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:textSize="35dp"
        android:layout_marginStart="105dp"
        android:textColor="@color/black"
        android:background="@drawable/invisible_btn"
        android:text="Lesson 02"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/less3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:textSize="35dp"
        android:background="@drawable/invisible_btn"
        android:textColor="@color/black"
        android:layout_marginStart="105dp"
        android:text="Lesson 03"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/less_start"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:textSize="30dp"
        android:background="@drawable/round_bg2"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:text="Back to Quiz"/>



</RelativeLayout>